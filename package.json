  "repository": "wooorm/wooorm.github.io",
  "bugs": "https://github.com/ju5tu5/ju5tu5/issues",
  "homepage": "http://ju5tu5.nl",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^14.4.0",
    "cssnano": "^3.10.0",
    "esmangle": "^1.0.1",
    "fingerprintjs2": "^1.5.1",
    "hast-util-select": "^1.0.0",
    "hastscript": "^3.0.1",
    "postcss-cli": "^4.1.0",
    "rehype-document": "^2.0.0",
    "rehype-preset-minify": "^2.0.0",
    "rehype-prevent-favicon-request": "^1.0.0",
    "rehype-slug": "^2.0.1",
    "rehype-stringify": "^3.0.0",
    "remark-cli": "^4.0.0",
    "remark-parse": "^4.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "remark-rehype": "^2.0.1",
    "remark-validate-links": "^6.1.0",
    "standard": "^10.0.3",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "to-vfile": "^2.1.1",
    "unified": "^6.1.5",
    "vfile-reporter": "^4.0.0"
  },
  "scripts": {
    "build:html": "node build",
    "build:js": "browserify index.js --bare | esmangle > static/index.js",
    "build:css": "postcss index.css > static/index.css",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "lint": "standard && stylelint index.css && remark . -qfo",
    "test": "npm run build && npm run lint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
